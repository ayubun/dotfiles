#!/bin/bash

alias g='git'
alias uptime="uptime -p \"$@\""
which bat &> /dev/null
if [ $? -eq 0 ]; then
  alias cat="bat"
else
  which batcat &> /dev/null
  if [ $? -eq 0 ]; then
    alias cat="batcat"
  else
    echo 'bat could not be found on this system'
  fi
fi
alias lg="lazygit"
alias gcb="g c main && g p && g cb"
alias l="ls -alh"
alias ll="ls -alh"
alias vim="nvim"
alias love=". $HOME/dotfiles/configs/dependencies/tmux-love.sh"

