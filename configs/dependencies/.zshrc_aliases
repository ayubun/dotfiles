#!/bin/bash

# dynamic aliasing (safe fallbacks)
unalias cat &>/dev/null
alias truecat=$(which cat)
which bat &> /dev/null
if [ $? -eq 0 ]; then
  alias cat="bat"
else
  which batcat &> /dev/null
  if [ $? -eq 0 ]; then
    alias cat="batcat"
  else
    echo 'bat could not be found on this system (cat will remain unaliased)'
  fi
fi

unalias ls &>/dev/null
alias truels=$(which ls)
which lsd &> /dev/null
if [ $? -eq 0 ]; then
  alias ls="lsd"
else
  echo 'lsd could not be found on this system (ls will remain unaliased)'
fi

#

alias g="git"
alias uptime="uptime -p \"$@\""
alias lg="lazygit"
alias gcb="g c main && g p && g cb"
alias ll="ls -alh"
alias l="ll"
alias lt="ls --tree"
alias vim="nvim"
# alias tldr="tldr -t ocean"
alias love=". $HOME/dotfiles/configs/dependencies/tmux-love.sh"

