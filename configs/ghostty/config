macos-option-as-alt = left
keybind = cmd+right=text:\x05
keybind = cmd+left=text:\x01

keybind = super+left=text:\x01
keybind = super+right=text:\x05
keybind = alt+left=esc:b
keybind = alt+right=esc:f
keybind = super+backspace=text:\x15
keybind = alt+backspace=text:\x1b\x7f

# unbind possibly conflicting keys with tmux/neovim
keybind = ctrl+h=unbind
keybind = ctrl+j=unbind
keybind = ctrl+k=unbind
keybind = ctrl+l=unbind

# Use zsh to run the script to avoid shell compatibility issues
# command=zsh -l -c "$HOME/dotfiles/configs/ghostty/ghostty-tmux.sh"

# theme = Overnight Slumber
theme = Lovelace

